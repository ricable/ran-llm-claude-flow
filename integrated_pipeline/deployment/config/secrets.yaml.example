# Example secrets configuration for RAN LLM Pipeline
# Copy to secrets.yaml and update with actual values
# DO NOT commit secrets.yaml to version control

apiVersion: v1
kind: Secret
metadata:
  name: ran-llm-secrets
  namespace: ran-llm-production
type: Opaque
stringData:
  # Database credentials
  database_url: "postgresql://user:password@host:5432/database"
  redis_url: "redis://user:password@host:6379"
  
  # API Keys
  openai_api_key: "sk-..."
  huggingface_token: "hf_..."
  
  # GitHub Integration
  github_token: "ghp_..."
  github_webhook_secret: "webhook_secret_here"
  
  # Monitoring and Observability
  prometheus_username: "admin"
  prometheus_password: "secure_password"
  grafana_admin_password: "secure_grafana_password"
  
  # Container Registry
  registry_username: "username"
  registry_password: "password_or_token"
  
  # SSL/TLS Certificates
  tls_cert: |
    -----BEGIN CERTIFICATE-----
    ...certificate content...
    -----END CERTIFICATE-----
  tls_key: |
    -----BEGIN PRIVATE KEY-----
    ...private key content...
    -----END PRIVATE KEY-----
  
  # Application Secrets
  jwt_secret: "your_jwt_secret_key_here"
  encryption_key: "your_encryption_key_here"
  
  # Cloud Provider Credentials (choose one based on your setup)
  # AWS
  aws_access_key_id: "AKIA..."
  aws_secret_access_key: "secret..."
  aws_region: "us-west-2"
  
  # Azure
  azure_client_id: "client_id"
  azure_client_secret: "client_secret"
  azure_tenant_id: "tenant_id"
  
  # Google Cloud
  gcp_service_account_key: |
    {
      "type": "service_account",
      "project_id": "your-project",
      ...
    }